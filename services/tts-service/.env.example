# ============================================================
# TTS Service Configuration
# ============================================================

# RabbitMQ Settings
QUEUE_HOST=localhost
QUEUE_PORT=5672
INPUT_QUEUE=chat_responses
OUTPUT_QUEUE=tts_audio

RABBITMQ_USER=admin
RABBITMQ_PASSWORD=admin123
RABBITMQ_VHOST=/

# ============================================================
# TTS Engine Configuration
# ============================================================
# Engine: edge (Microsoft Edge TTS), gtts (Google TTS), pyttsx3, coqui
TTS_ENGINE=edge

# Voice for Edge TTS (Vietnamese voices)
# - vi-VN-HoaiMyNeural (Female, recommended)
# - vi-VN-NamMinhNeural (Male)
TTS_VOICE=vi-VN-HoaiMyNeural

# Speed: -50% to +100%
TTS_RATE=+10%

# Pitch: -50Hz to +50Hz
TTS_PITCH=+0Hz

# ============================================================
# Audio Settings
# ============================================================
AUDIO_FORMAT=mp3
AUDIO_OUTPUT_DIR=./audio_output

# ============================================================
# Debug
# ============================================================
DEBUG=false
